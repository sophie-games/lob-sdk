{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "paths": {
      "@lob-sdk/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
